    // 手続き
    public void append(int x) {    // (1)
	if (cnt==N) full.wait();   // (1)
	buf[last] = x;             // (3)
	last = (last + 1) % N;     // (3)
	cnt++;                     // (3)
	empty.signal();            // (3)
    }
    public int remove() {          // (2)
	if (cnt==0) empty.wait();  // (2)
	int x = buf[first];        // (2)
	first = (first + 1) % N;   // (2)
	cnt--;                     // (2)
	full.signal();             // (2)
	return x;                  // (4)
    }
}
