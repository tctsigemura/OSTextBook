public class MonBoundedBuffer {
    // 資源（リングバッファ）
    private int N;
    private int[] buf;
    private int first, last, cnt;
    // 初期化
    public MonBoundedBuffer(int n) {
	N = n;
	buf = new int[N];
	first = last = cnt = 0;
    }
    // 手続き
    private void await() {
	try{wait();}catch(InterruptedException e){}
    }
